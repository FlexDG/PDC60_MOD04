<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDC60_MOD04.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="SkyBlue">

                <Label Text="Hello FELIX DE GUZMAN!!!" HorizontalOptions="Center" TextColor="blue" FontSize="32">

                    <Label.GestureRecognizers>

                        <DragGestureRecognizer CanDrag="True" DragStarting="DragGestureRecognizer_Drag"/>

                    </Label.GestureRecognizers>
                    
                </Label>
            </Frame>



            <Frame>
<!--destination-->
                <Frame.GestureRecognizers>

                    <DropGestureRecognizer AllowDrop="True" Drop="DropGestureRecognizer_Drop"/>

                </Frame.GestureRecognizers>

            </Frame>
            


        </StackLayout>
    </ContentPage.Content>
</ContentPage>